<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="API Configuration"
            android:textStyle="bold"
            android:textSize="18sp" />

        <!-- API Key -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <EditText
                android:id="@+id/et_api_key"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="API Key"
                android:inputType="textPassword" />
            <Button
                android:id="@+id/btn_clear_api_key"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:text="X"
                android:textSize="12sp"
                android:padding="0dp"
                android:minWidth="0dp"
                android:minHeight="0dp" />
        </LinearLayout>

        <!-- Base URL -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <EditText
                android:id="@+id/et_base_url"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Base URL"
                android:inputType="textUri" />
            <Button
                android:id="@+id/btn_clear_base_url"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:text="X"
                android:textSize="12sp"
                android:padding="0dp"
                android:minWidth="0dp"
                android:minHeight="0dp" />
        </LinearLayout>
        
        <!-- Model Name (NEW) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <EditText
                android:id="@+id/et_model"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Model Name (e.g. glm-4v)"
                android:inputType="text" />
            <Button
                android:id="@+id/btn_clear_model"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:text="X"
                android:textSize="12sp"
                android:padding="0dp"
                android:minWidth="0dp"
                android:minHeight="0dp" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Task"
            android:textStyle="bold"
            android:textSize="18sp" />

        <!-- Task -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="top">
            <EditText
                android:id="@+id/et_task"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Task Description"
                android:inputType="textMultiLine"
                android:minLines="2" />
            <Button
                android:id="@+id/btn_clear_task"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:text="X"
                android:textSize="12sp"
                android:padding="0dp"
                android:minWidth="0dp"
                android:minHeight="0dp" />
        </LinearLayout>

        <Button
            android:id="@+id/btn_save_settings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Save Settings" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#CCCCCC"
            android:layout_marginVertical="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Control"
            android:textStyle="bold"
            android:textSize="18sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_step"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Run ONE Step" />

            <Button
                android:id="@+id/btn_auto_loop"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:enabled="false"
                android:text="Auto Loop" />
        </LinearLayout>
        
        <TextView
            android:id="@+id/tv_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Status: Idle"
            android:textColor="#333333" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Agent View"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/iv_preview"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_marginTop="8dp"
            android:background="#EEEEEE"
            android:scaleType="fitCenter" />

    </LinearLayout>
</ScrollView>
